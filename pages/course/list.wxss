/* pages/course/list.wxss */
page{
  background-color: #f9f9f9;
}
view .van-search__content {
  /* background: #fff; */
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(0,31,102,0.06);
  border-radius: 10rpx;
}
.van-tab--active{
  color:#004ce5 !important;
  font-size:28rpx;
  letter-spacing: 1px;
}
.van-cell{
  background-color: #f9f9f9 !important;
}
.van-cell__title{
  font-size:32rpx;
  color:#004ce5;
}
.van-collapse-item__content{
  background-color: #f9f9f9 !important;
  padding:0px !important;
}
.table-h{
  color:#333;
  font-size:28rpx;
  height:90rpx;
  line-height: 90rpx;
  background-color: #fff;
  text-align: center;
}
.table-c{
  color:#333;
  font-size:24rpx;
  height:90rpx;
  padding:30rpx;
  background-color: #fff;
  text-align: center;
}
.bg-h{
  border-top:1rpx solid #e6e6e6;
  background-color: #fff;
}
.bg-w{
  background-color: #fff;
  margin-bottom:20rpx;
  height: auto;
}
.add-lesson{
  position: absolute;
  right: 30rpx;
  bottom:30rpx;
  width: 138rpx;
  height: 138rpx;
  background: #004CE5;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(0,0,0,0.1);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color:#fff;
  font-size:24rpx;
}
.l-circle{
  width:12rpx;
  height:12rpx;
  border-radius:50%;
  background-color: #004ce5;
}
.course-item{
  display: flex;
  min-height:90rpx;
  flex-direction: row;
  background-color: #fff;
  align-items: center;
  /* justify-content: center; */
  padding:0 30rpx;
}
.item-name{
  flex:1;
  color:#333;
  font-size:28rpx;
  padding:0 30rpx;
}
.item-state{
  font-size: 28rpx;
  font-weight: 400;
}
.s-w{
  color: #FA9A00;
}
.s-a{ 
  color: #004CE5;
}
.s-o{
  color:#666666;
}