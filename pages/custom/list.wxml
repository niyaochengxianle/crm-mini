<!--pages/custom/list.wxml-->
<view class="task-box">
    <van-search
        value="{{ page.keyWord }}"
        bind:change="setVal"
        bind:search="onSearch"
        left-icon="/image/admin/search.png"
        background="#f9f9f9"
        placeholder="请输入搜索关键词"
        />
    <view class="list-c">
        <view
          class="apply-item" wx:for="{{list}}" wx:key="index"  open-type="navigateTo">
        <view class="box-right">
            <view class="box-right-item1"  bind:tap="toDetail" data-task="{{item}}">
                <view class="title">{{ item.name }}</view>
                <view class="list-b">联系方式：{{item.phone}}</view>
            </view>
            <view class="list-y">
                <text wx:if="{{item.state==2}}"> 已回访</text>
                <view wx:if="{{item.state==1}}" data-task="{{item}}" class="type-tag" bindtap="Tel" data-tel="{{item.phone}}">
                  未回访
                </view>
                <view class="type-tag" wx:if="{{item.state==0}}" data-task="{{item}}" bindtap="toPlan">
                    未分配
                </view>
            </view>
        </view>
    </view>
    </view>
    <view wx:if="{{!loading&&list.length>0}}" class="bottom-line">我是有底线的~</view>
    <loading hidden="{{!loading}}">
        加载中...
    </loading>
</view>