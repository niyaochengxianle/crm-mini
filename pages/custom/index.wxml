<!--pages/custom/index.wxml 客户基本信息 扫码后填写-->
<view class="container-t">
  <view class="info-t">
    <text>成都市武侯区直营当地 </text>
  </view>
  <view class="info-p">
    <text>负责人</text>
  </view>
</view>
<view class="info-m">
  <view class="info-base">
    客户基本信息
  </view>
  <view>
    <van-field label-class="van-field_r"
        size="large"
        input-class="van-field_r"
        model:value="{{channelInfo.userName}}"
        input-align="right" label="姓名"  placeholder="请输入" />
    <van-field label-class="van-field_r"
    size="large"
    input-class="van-field_r"
    model:value="{{channelInfo.phone}}"
    input-align="right" label="联系方式"  placeholder="请输入" />
    <van-cell title="市区" is-link value="请选择" bind:click="showPopup" />
  </view>
</view>
<view class="info-x">
  <van-field label-class="van-field_r"
        size="large"
        input-class="van-field_r"
        model:value="{{channelInfo.userName}}"
        input-align="right" label="所属区域经理姓名"  placeholder="请输入" />
    <van-field label-class="van-field_r"
    size="large"
    input-class="van-field_r"
    model:value="{{channelInfo.phone}}"
    input-align="right" label="所属区域经理联系方式"  placeholder="请输入" />
</view>
<view class="info-x">
  <van-field label-class="van-field_r"
        size="large"
        input-class="van-field_r"
        model:value="{{channelInfo.userName}}"
        input-align="right" label="所属区域业务员姓名"  placeholder="请输入" />
    <van-field label-class="van-field_r"
    size="large"
    input-class="van-field_r"
    model:value="{{channelInfo.phone}}"
    input-align="right" label="所属区域业务员联系方式"  placeholder="请输入" />
</view>
<view class="info-x">
  <van-cell title="状态" is-link value="请选择" bind:click="showPicker" />
</view>
<van-popup show="{{ show }}" bind:close="onClose" round
  position="bottom"
  custom-style="height: 60%">
  <van-area area-list="{{ areaList }}" bind:confirm="confirmArea" bind:cancel="cancelArea" columns-num="{{ 2 }}" title="选择省市" />
</van-popup>
<van-popup show="{{ showPicker }}" bind:close="closePicker" round
  position="bottom"
  custom-style="height: 60%">
  <van-picker columns="{{ columns }}" title="选择状态" bind:confirm="confirmPicker" bind:cancel="cancelPicker" />
</van-popup>
<!-- bind:confirm
bind:cancel -->
<view class="content-btn">
  <van-button color="#004ce5" block bind:tap="tapScan">提  交</van-button>
</view>



